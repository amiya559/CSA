<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            >

            <ImageView
                android:id="@+id/image"
                android:src="@drawable/faculty"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="160dp" />

            <TextView
                android:id="@+id/title"
                android:layout_below="@id/image"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:text="Title"
                android:fontFamily="@font/abhaya_libre_extrabold"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rank"
                android:layout_below="@id/title"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="Rank"
                android:fontFamily="@font/abhaya_libre_extrabold"
                android:textSize="12dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/qualification"
                android:layout_below="@id/rank"
                android:layout_marginLeft="16dp"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:textSize="10sp"
                android:text="Qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/skills"
                android:layout_below="@id/qualification"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:textSize="12sp"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="Skills: "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/subjects"
                android:layout_below="@id/skills"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="16dp"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:textSize="10sp"
                android:text="Subjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/doj"
                android:layout_below="@id/subjects"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="Date of Joining: "
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dateOfJoining"
                android:layout_below="@id/doj"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="DOJ"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/contactdetails"
                android:layout_below="@id/dateOfJoining"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="Contact Details: "
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/emails"
                android:layout_below="@id/contactdetails"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="Email"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/phoneno"
                android:layout_below="@id/emails"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="Phone no"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


</androidx.cardview.widget.CardView>
</LinearLayout>